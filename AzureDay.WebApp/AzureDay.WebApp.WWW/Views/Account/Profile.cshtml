														<img id="imgGravatar1" style="display: none; padding-bottom: 10px;"/>
														<p style="font-weight: bold;">@($"{Model.FirstName} {Model.LastName}")</p>
														<p>@Model.Company</p>
														<p>&nbsp;</p>
													</div>
												</div>
